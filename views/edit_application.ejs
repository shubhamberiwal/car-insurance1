

<%- include('partials/header'); %>

<div class="ui main text container segment" style="margin-top: 6em;">
    <div class="ui huge header">Edit Claim Application Form id: <%=rows[0].app_id%></div>
    <form class="ui form" action="/application/<%= rows[0].app_id %>" method="POST">
        
        <div class="field">
            <label>Application ID</label>
            <input type="number" name="aid" value="<%= rows[0].app_id %>" placeholder="eg: 1234" id="">
        </div>
        <div class="field">
            <label for="">Cause </label>
            <input type="text" name="cause" value="<%= rows[0].cause %>" placeholder="eg: Theft/Fire/Natural Disasters" id="">
        </div>
        <div class="field">
            <label for="">Application Amount</label>
            <input type="number" name="amount" value="<%= rows[0].app_amount %>" placeholder="eg: 2000" id="">
        </div>
        <div class="field">
            <label for="">Car ID</label>
            <input type="number" name="cid" value="<%= rows[0].carid %>" placeholder="Must be a car id from car details database eg: 8055" id="">
        </div>

        <button class="ui inverted secondary button" type="submit">Update Claim Application to Database</button>
    </form>
</div>


</body>
</html>